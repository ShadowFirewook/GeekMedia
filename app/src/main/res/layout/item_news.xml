<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_post"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        app:cardCornerRadius="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">

        <ImageView
            android:id="@+id/iv_post"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:background="@color/main_blue"/>

        <ImageView
            android:id="@+id/iv_share"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/share_img"
            android:layout_gravity="end"
            android:layout_marginEnd="52dp"
            android:layout_marginTop="8dp"/>

        <ImageView
            android:id="@+id/iv_like"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/like_img"
            android:layout_gravity="end"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="12dp"/>

        <ImageView
            android:id="@+id/iv_liked"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/liked_img"
            android:layout_gravity="end"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="12dp"
            android:visibility="gone"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:layout_gravity="bottom"
            android:layout_marginEnd="20dp">

            <View
                android:id="@+id/view_dark_foreground"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent_black_50" />

            <TextView
                android:id="@+id/tv_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/category"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="12dp"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/tv_created_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_01_01_2023"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:gravity="center"
                android:layout_marginStart="16dp"
                android:layout_toEndOf="@+id/tv_category"
                android:layout_alignTop="@id/tv_category"
                android:layout_alignBottom="@id/tv_category"/>


            <TextView
                android:id="@+id/tv_post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/news_ru"
                tools:text="@tools:sample/lorem/random"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:layout_below="@id/tv_category"
                android:layout_alignStart="@id/tv_category"
                android:ellipsize="end"
                android:maxLines="3"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</FrameLayout>