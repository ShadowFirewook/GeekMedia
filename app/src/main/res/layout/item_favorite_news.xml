<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_post"
        android:layout_width="match_parent"
        android:layout_height="108dp"
        app:cardCornerRadius="4dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="12dp">

        <ImageView
            android:id="@+id/iv_favorite_post"
            android:layout_width="152dp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:maxWidth="160dp"
            android:src="@color/main_blue"/>
        
        <TextView
            android:id="@+id/tv_name_favorite_post"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/news_ru"
            tools:text="@tools:sample/lorem/random"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_below="@id/tv_category"
            android:layout_alignStart="@id/tv_category"
            android:ellipsize="end"
            android:layout_marginStart="168dp"
            android:layout_marginEnd="44dp"
            android:layout_marginVertical="20dp"/>

        <ImageView
            android:id="@+id/iv_liked"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/liked_img"
            android:layout_gravity="end"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"/>

        <ImageView
            android:id="@+id/iv_like"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/like_img"
            android:layout_gravity="end"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:visibility="gone"/>

    </androidx.cardview.widget.CardView>
    
</FrameLayout>